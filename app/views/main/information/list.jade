extend ../layout

append css
    link(rel='stylesheet',href='/css/main/index.css')

block main

    style.

    div(class="am-slider am-slider-default",data-am-flexslider)
        ul.am-slides
            li
                img(src="http://s.amazeui.org/media/i/demos/bing-1.jpg")
            li
                img(src="http://s.amazeui.org/media/i/demos/bing-2.jpg")

    div(class="part-title")
        h3 信息发布

    div(class="list-wrap")
        ul.list-content
            each info in infos
                li.list-item
                    a(href="information/"+info.id)
                        if info.coverImage.length!==0
                            img(src='/uploads/image/'+info.coverImage[0].filename)
                        h3= info.title
                        .am-list-item-text.text-indent= info.info
    
block scripts