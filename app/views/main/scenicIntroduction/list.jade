extend ../layout

append css
    link(rel='stylesheet',href='/css/main/index.css')

block main

    style.

    div(class="am-slider am-slider-default",data-am-flexslider)
        ul.am-slides
            li
                img(src="http://s.amazeui.org/media/i/demos/bing-1.jpg")
            li
                img(src="http://s.amazeui.org/media/i/demos/bing-2.jpg")

    div(class="part-title")
        h3 景点列表

    div(class="list-wrap")
        ul.list-content
            each scenic in scenics
                li.list-item
                    a(href="scenicIntroduction/"+scenic.id)
                        .am-u-sm-7.no-padding-lr
                            h3= scenic.title
                            .am-list-item-text= scenic.info
                        .am-u-sm-5.no-padding-r
                            img(src='/uploads/image/'+scenic.coverImage.filename)

    
block scripts