extend ../layout

append css
    link(rel='stylesheet',href='/css/main/index.css')

block main

    style.
        
    div(class="am-slider am-slider-default",data-am-flexslider)
        ul.am-slides
            each image in route.images
                li
                    img(src="../../../uploads/image/"+image.filename)
    div.post-title
        h3= route.title
    div.post-content
        != route.content

block scripts