extend ../layout

append css
    link(rel='stylesheet',href='/css/main/index.css')

block main

    style.

    div(class="am-slider am-slider-default",data-am-flexslider)
        ul.am-slides
            each route in routes
                if(route.recommend === true&&route.published === true)
                    li
                        a(href="routeRecommend/"+route.id)
                            img(src='/uploads/image/'+route.coverImage.filename)
                            div.am-slider-desc
                                a.am-slider-more 点击图片了解更多           
           

    div(class="part-title")
        h3 全部推荐路线

    div(class="list-wrap")
        ul.list-content
            each route in routes
                if(route.published === true)
                    li.list-item
                        a(href="routeRecommend/"+route.id)
                            .am-u-sm-7.no-padding-lr
                                h3= route.title
                                .am-list-item-text= route.info
                            .am-u-sm-5.no-padding-r
                                img(src='/uploads/image/'+route.coverImage.filename)

                            

    
block scripts